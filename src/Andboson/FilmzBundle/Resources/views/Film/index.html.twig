{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Film list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Director</th>
                <th>Poster</th>
                <th>Description</th>
                <th>Rating</th>
                <th>Releasedate</th>
                <th>Link</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('films_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.director }}</td>
                <td>{{ entity.poster }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.rating }}</td>
                <td>{% if entity.releaseDate %}{{ entity.releaseDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.link }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('films_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('films_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('films_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
